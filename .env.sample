# CaiaAgent Core Environment Variables

# ─────────────────────────────────────────────────────────────────────────────
# Railway API Configuration (for n8n service control)
# ─────────────────────────────────────────────────────────────────────────────
# Railway API token for controlling services
RAILWAY_API_TOKEN="railway_xxxxxxxxxxxxxxxxx"

# n8n service ID in Railway (found in Railway dashboard)
N8N_SERVICE_ID="abcd1234"

# ─────────────────────────────────────────────────────────────────────────────
# n8n Service Configuration
# ─────────────────────────────────────────────────────────────────────────────
# n8n instance hostname (without protocol)
N8N_HOST="caia-agent-production.up.railway.app"

# Protocol for n8n connection (http or https)
N8N_PROTOCOL="https"

# n8n editor base URL
N8N_EDITOR_BASE_URL="https://caia-agent-production.up.railway.app"

# n8n encryption key (keep this secure!)
N8N_ENCRYPTION_KEY="caia-agent-n8n-20250607-caia-birth-day-20250902-n8n"

# n8n configuration
N8N_RUNNERS_ENABLED="true"
N8N_TRUSTED_PROXIES="0.0.0.0/0,::/0"
N8N_PROXY_HOPS="1"
N8N_LISTEN_ADDRESS="0.0.0.0"

# Seconds to wait for n8n to be ready after starting (default: 10)
N8N_STARTUP_WAIT="10"

# ─────────────────────────────────────────────────────────────────────────────
# n8n API Authentication
# ─────────────────────────────────────────────────────────────────────────────
# n8n API URL (legacy, for backwards compatibility)
N8N_API_URL="https://caia-agent-production.up.railway.app/api/v1"

# n8n API key (if using API key authentication)
N8N_API_KEY="your-n8n-api-key-here"

# n8n BasicAuth credentials (alternative to API key)
N8N_BASIC_AUTH_USER=""
N8N_BASIC_AUTH_PASSWORD=""

# ─────────────────────────────────────────────────────────────────────────────
# CaiaAgent Security
# ─────────────────────────────────────────────────────────────────────────────
# CaiaAgent authentication key
CAIA_AGENT_KEY="your-caia-agent-key-here"

# ─────────────────────────────────────────────────────────────────────────────
# External Service Credentials (for n8n workflows)
# ─────────────────────────────────────────────────────────────────────────────
# Gmail credentials for email workflows
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"

# Telegram bot token for messaging workflows
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# OpenAI API key for AI workflows
OPENAI_API_KEY="your-openai-api-key"

# ─────────────────────────────────────────────────────────────────────────────
# Application Settings
# ─────────────────────────────────────────────────────────────────────────────
# Environment (development, staging, production)
ENVIRONMENT="development"

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL="INFO"

# Server port
PORT="8000"